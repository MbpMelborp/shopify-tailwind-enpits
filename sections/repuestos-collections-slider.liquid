{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign collections_count = 0
  assign max_collections = section.settings.max_collections
  assign repuestos_collections = blank

  comment
    Intentar diferentes formas de acceder a las colecciones
    Shopify puede tener restricciones dependiendo del template
  endcomment

  if collections.all.size > 0
    assign all_collections = collections.all
  elsif collections.size > 0
    assign all_collections = collections
  else
    assign all_collections = blank
  endif

  if all_collections != blank
    for collection in all_collections
      assign collection_title_upper = collection.title | upcase
      if collection_title_upper contains 'REPUESTOS'
        assign collections_count = collections_count | plus: 1
      endif
    endfor
  endif

  if max_collections > 0 and max_collections < collections_count
    assign collections_count = max_collections
  endif
-%}

<div class='repuestos-slider-section section-{{ section.id }}-padding'>
  {%- if collections_count > 0 -%}
    <div class='repuestos-slider-wrapper page-width'>
      {%- if section.settings.title != blank -%}
        <h2 class='visually-hidden'>{{ section.settings.title }}</h2>
      {%- endif -%}
      <!-- Botón anterior -->
      {%- if section.settings.show_controls -%}
        <button
          type='button'
          class='repuestos-slider-button repuestos-slider-prev'
          aria-label='Colección anterior'
        >
          <div class='repuestos-slider-button-inner'>
            <div class='repuestos-slider-button-icon'>
              <svg
                width='18'
                height='18'
                viewBox='0 0 24 24'
                fill='none'
                xmlns='http://www.w3.org/2000/svg'
              >
                <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
          </div>
        </button>
      {%- endif -%}

      <!-- Contenedor del slider -->
      <div
        class='repuestos-slider-container'
        data-section-id='{{ section.id }}'
      >
        {%- assign current_count = 0 -%}
        {%- if all_collections != blank -%}
          {%- for collection in all_collections -%}
            {%- assign collection_title_upper = collection.title | upcase -%}
            {%- if collection_title_upper contains 'REPUESTOS' -%}
              {%- if max_collections == 0 or current_count < max_collections -%}
                {% render 'card-repuestos-collection', card_collection: collection %}
                {%- assign current_count = current_count | plus: 1 -%}
              {%- endif -%}
            {%- endif -%}
          {%- endfor -%}
        {%- endif -%}
      </div>

      <!-- Botón siguiente -->
      {%- if section.settings.show_controls -%}
        <button
          type='button'
          class='repuestos-slider-button repuestos-slider-next'
          aria-label='Colección siguiente'
        >
          <div class='repuestos-slider-button-inner'>
            <div class='repuestos-slider-button-icon'>
              <svg
                width='18'
                height='18'
                viewBox='0 0 24 24'
                fill='none'
                xmlns='http://www.w3.org/2000/svg'
              >
                <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
          </div>
        </button>
      {%- endif -%}
    </div>
  {%- else -%}
    <div class='repuestos-slider-empty'>
      <p>No se encontraron colecciones de repuestos.</p>
      {%- comment -%} Debug temporal: mostrar información de colecciones {%- endcomment -%}
      {%- if all_collections != blank -%}
        <div class='repuestos-slider-debug'>
          <p>Colecciones disponibles: {{ all_collections.size }}</p>
          {%- if all_collections.size > 0 -%}
            <p class='mt-2'>Primeras 5 colecciones:</p>
            <ul class='repuestos-slider-debug-list'>
              {%- assign debug_count = 0 -%}
              {%- for collection in all_collections -%}
                {%- if debug_count < 5 -%}
                  <li>{{ collection.title }} ({{ collection.handle }})</li>
                  {%- assign debug_count = debug_count | plus: 1 -%}
                {%- endif -%}
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>
      {%- else -%}
        <div class='repuestos-slider-debug'>
          <p>No se pudo acceder a las colecciones.</p>
          <p>collections.all.size: {{ collections.all.size }}</p>
          <p>collections.size: {{ collections.size }}</p>
        </div>
      {%- endif -%}
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Slider Repuestos",
  "tag": "section",
  "class": "section section-repuestos-collections-slider",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "REPUESTOS GÉNERICOS PARA"
    },
    {
      "type": "range",
      "id": "max_collections",
      "min": 0,
      "max": 20,
      "step": 1,
      "label": "Cantidad máxima de colecciones",
      "info": "0 = mostrar todas",
      "default": 0
    },
    {
      "type": "checkbox",
      "id": "show_controls",
      "label": "Mostrar controles de navegación",
      "default": true
    },
    {
      "type": "header",
      "content": "Espaciado"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Espaciado superior",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Espaciado inferior",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Slider Repuestos"
    }
  ]
}
{% endschema %}
