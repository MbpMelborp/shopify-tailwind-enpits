{{ 'component-article-card.css' | asset_url | stylesheet_tag }}
{{ 'featured-blog.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign post_limit = 2
-%}
<div class='blog color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding'>
  <div class='page-width-desktop isolate'>
    {%- comment -%} Bloque destacado con título y descripción {%- endcomment -%}
    {%- if section.settings.highlight_title != blank or section.settings.highlight_description != blank -%}
      <div class='featured-blog__highlight{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}'>
        {%- if section.settings.highlight_title != blank -%}
          <h2
            id='SectionHeading-{{ section.id }}'
            class='featured-blog__highlight-title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}'
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
            {% endif %}
          >
            {{ section.settings.highlight_title }}
          </h2>
        {%- endif -%}
        {%- if section.settings.highlight_description != blank -%}
          <div class='featured-blog__highlight-description rte'>
            {{ section.settings.highlight_description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- comment -%} Grid de 2 columnas fijas {%- endcomment -%}
    {%- if section.settings.blog != blank and section.settings.blog.articles_count > 0 -%}
      <ul
        id='BlogPosts-{{ section.id }}'
        class='featured-blog__grid articles-wrapper contains-card contains-card--article{% if settings.blog_card_style == 'standard' %} contains-card--standard{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}'
        role='list'
      >
        {%- for article in section.settings.blog.articles limit: post_limit -%}
          <li
            id='Article-{{ section.id }}-{{ forloop.index }}'
            class='blog__post article{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}'
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style='--animation-order: {{ forloop.index }};'
            {% endif %}
          >
            {% render 'article-card',
              blog: section.settings.blog,
              article: article,
              media_aspect_ratio: 1.66,
              show_image: section.settings.show_image,
              show_date: section.settings.show_date,
              show_author: section.settings.show_author,
              show_excerpt: true
            %}
          </li>
        {%- endfor -%}
      </ul>
    {%- else -%}
      {%- comment -%} Placeholder cuando no hay artículos {%- endcomment -%}
      <ul
        id='BlogPosts-{{ section.id }}'
        class='featured-blog__grid articles-wrapper contains-card contains-card--article{% if settings.blog_card_style == 'standard' %} contains-card--standard{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}'
        role='list'
      >
        {% for i in (1..post_limit) -%}
          {%- assign placeholder_image_index = forloop.index0 | modulo: 3 | plus: 1 -%}
          {%- assign placeholder_image = 'blog-apparel-' | append: placeholder_image_index -%}
          <li
            id='Article-{{ section.id }}-{{ forloop.index }}'
            class='blog__post article{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}'
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style='--animation-order: {{ forloop.index }};'
            {% endif %}
          >
            <div class='article-card-wrapper card-wrapper featured-blog__article-card{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}'>
              <div
                class='
                  card article-card card--{{ settings.blog_card_style }}
                  {% if settings.blog_card_style == 'card' %} color-{{ settings.blog_card_color_scheme }} gradient{% endif %}
                  {% if section.settings.show_image %} card--media{% else %} card--text{% endif %}
                '
                style=' {% if settings.blog_card_style == 'standard' %} --ratio-percent: 100%;{% elsif settings.blog_card_style == 'card' %} --ratio-percent: 0%;{% endif %}'
              >
                <div
                  class='card__inner{% if settings.blog_card_style == 'standard' %} color-{{ settings.blog_card_color_scheme }} gradient{% endif %} ratio'
                  style='--ratio-percent: 80%;'
                >
                  {%- if section.settings.show_image == true -%}
                    <div class='article-card__image-wrapper card__media featured-blog__article-image-wrapper'>
                      <div class='article-card__image media featured-blog__article-image'>
                        {{ placeholder_image | placeholder_svg_tag: 'blog-placeholder-svg' }}
                      </div>
                    </div>
                  {%- endif -%}
                  <div class='card__content featured-blog__article-content'>
                    <div class='card__information'>
                      <h3 class='card__heading featured-blog__article-title h2'>
                        {{ 'sections.featured_blog.onboarding_title' | t }}
                      </h3>
                      <p class='article-card__excerpt rte-width featured-blog__article-excerpt'>
                        {{ 'sections.featured_blog.onboarding_content' | t }}
                      </p>
                    </div>
                  </div>
                </div>
                <div class='card__content'>
                  <div class='card__information'>
                    <h3 class='card__heading h2'>
                      {{ 'sections.featured_blog.onboarding_title' | t }}
                    </h3>
                    <p class='article-card__excerpt rte-width'>
                      {{ 'sections.featured_blog.onboarding_content' | t }}
                    </p>
                  </div>
                </div>
                {%- comment -%} Botón circular rojo con flecha (placeholder) {%- endcomment -%}
                <a href='#' class='featured-blog__article-button' aria-label='{{ 'blogs.article.read_more' | t }}'>
                  {{- 'icon-arrow.svg' | inline_asset_content -}}
                </a>
              </div>
            </div>
          </li>
        {%- endfor -%}
      </ul>
    {%- endif -%}

    {%- comment -%} Botón opcional "Ver todos los artículos" {%- endcomment -%}
    {%- if section.settings.show_view_all_button and section.settings.blog != blank -%}
      <div
        class='featured-blog__view-all-button-wrapper{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}'
        {% if settings.animations_reveal_on_scroll %}
          data-cascade
        {% endif %}
      >
        <a
          href='{{ section.settings.blog.url }}'
          id='ViewAllButton-{{ section.id }}'
          class='featured-blog__view-all-button'
          aria-labelledby='ViewAllButton-{{ section.id }} SectionHeading-{{ section.id }}'
        >
          {{ section.settings.view_all_button_text | default: 'Ver todos los artículos' }}
        </a>
      </div>
    {%- endif -%}

    {%- if section.settings.show_view_all and section.settings.blog != blank and post_limit < section.settings.blog.articles_count -%}
      <div
        class='blog__view-all center small-hide medium-hide{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}'
        {% if settings.animations_reveal_on_scroll %}
          data-cascade
        {% endif %}
      >
        <a
          href='{{ section.settings.blog.url }}'
          id='ViewAll-{{ section.id }}'
          class='blog__button button'
          aria-labelledby='ViewAll-{{ section.id }} SectionHeading-{{ section.id }}'
        >
          {{ 'sections.featured_blog.view_all' | t }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.featured-blog.name",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Bloque Destacado"
    },
    {
      "type": "inline_richtext",
      "id": "highlight_title",
      "label": "Título del bloque destacado",
      "default": "Nuestro Blog"
    },
    {
      "type": "richtext",
      "id": "highlight_description",
      "label": "Descripción del bloque destacado",
      "default": "<p>Descubre las últimas noticias y consejos sobre motocicletas y repuestos.</p>"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        },
        {
          "value": "hxxl",
          "label": "t:sections.all.heading_size.options__5.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "header",
      "content": "Configuración del Blog"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "t:sections.featured-blog.settings.blog.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "show_image",
      "default": true,
      "label": "t:sections.featured-blog.settings.show_image.label",
      "info": "t:sections.featured-blog.settings.show_image.info"
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "default": true,
      "label": "t:sections.featured-blog.settings.show_date.label"
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "default": false,
      "label": "t:sections.featured-blog.settings.show_author.label"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "t:sections.featured-blog.settings.show_view_all.label"
    },
    {
      "type": "header",
      "content": "Botón Ver Todos los Artículos"
    },
    {
      "type": "checkbox",
      "id": "show_view_all_button",
      "default": false,
      "label": "Mostrar botón 'Ver todos los artículos'",
      "info": "Muestra un botón al final de la sección que lleva a la página completa del blog"
    },
    {
      "type": "text",
      "id": "view_all_button_text",
      "label": "Texto del botón",
      "default": "Ver todos los artículos"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured-blog.presets.name"
    }
  ]
}
{% endschema %}
