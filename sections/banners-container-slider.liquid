  "name": "Banner Rotador",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Configuración de Rotación"
    },
    {
      "type": "range",
      "id": "rotation_speed",
      "min": 3000,
      "max": 9000,
      "step": 1000,
      "unit": "ms",
      "label": "Velocidad de Rotación",
      "default": 5000
    },
    {
      "type": "checkbox",
      "id": "auto_play",
      "label": "Reproducción Automática",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_controls",
      "label": "Mostrar Controles de Navegación",
      "default": true
    },
    {
      "type": "header",
      "content": "Colores por Defecto"
    },
    {
      "type": "color",
      "id": "default_title_color",
      "label": "Color del Título",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "default_subtitle_color",
      "label": "Color del Subtítulo",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "default_button_color",
