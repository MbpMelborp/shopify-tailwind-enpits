{{ 'components/banners-container-slider.css' | asset_url | stylesheet_tag }}

<div
  class='banners-container-slider'
  data-rotation-speed='{{ section.settings.rotation_speed }}'
  data-auto-play='{{ section.settings.auto_play }}'
  data-show-controls='{{ section.settings.show_controls }}'
>
  {%- comment -%} Banner de ejemplo 1 {%- endcomment -%}
  <div class='banner-slide active'>
    <!-- Imagen de fondo -->
    <div class='banner-background'>
      <img src='https://images.unsplash.com/photo-1558618666-fcd25c85cd64?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1920&q=80' class='absolute inset-0 w-full h-full object-cover' loading='lazy' alt='Motorcycle background'>
    </div>

    <!-- Overlay de gradiente -->
    <div class='banner-overlay'></div>

    <!-- Contenido del banner -->
    <div class='page-width'>
      <div class='banner-content banner-content--left'>
        <div class='banner-text-container'>
          <!-- Título -->
          <h2 class='banner-title' style='color: #ffffff;'>
            NACIMOS PARA AYUDARTE, PARA SER ESE EQUIPO FUERTE Y CONFIABLE.
          </h2>

          <!-- Subtítulo con línea -->
          <div class='banner-subtitle-container'>
            <div class='banner-subtitle-line'></div>
            <p class='banner-subtitle' style='color: #ffffff;'>
              ¿buscas repuestos! AQUÍ lOs ENCUENTRAS
            </p>
          </div>

          <!-- Botón -->
          <a href='/collections/all' class='banner-button banner-button--primary' style='background-color: #dc2626; color: #ffffff;'>
            Ver Más
          </a>
        </div>
      </div>
    </div>

    <!-- Imagen principal -->
    <div class='banner-main-image'>
      <img src='https://images.unsplash.com/photo-1558618666-fcd25c85cd64?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80' class='banner-main-img' loading='lazy' alt='Motorcycle main'>
    </div>
  </div>

  {%- comment -%} Banner de ejemplo 2 {%- endcomment -%}
  <div class='banner-slide'>
    <!-- Imagen de fondo -->
    <div class='banner-background'>
      <img src='https://images.unsplash.com/photo-1568772585407-9361f9bf3a87?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1920&q=80' class='absolute inset-0 w-full h-full object-cover' loading='lazy' alt='Car parts background'>
    </div>

    <!-- Overlay de gradiente -->
    <div class='banner-overlay'></div>

    <!-- Contenido del banner -->
    <div class='page-width'>
      <div class='banner-content banner-content--center'>
        <div class='banner-text-container'>
          <!-- Título -->
          <h2 class='banner-title' style='color: #ffffff;'>
            CALIDAD GARANTIZADA EN CADA REPUESTO
          </h2>

          <!-- Subtítulo con línea -->
          <div class='banner-subtitle-container'>
            <div class='banner-subtitle-line'></div>
            <p class='banner-subtitle' style='color: #ffffff;'>
              Repuestos originales y compatibles para todas las marcas
            </p>
          </div>

          <!-- Botón -->
          <a href='/collections/all' class='banner-button banner-button--secondary' style='border-color: #dc2626; color: #dc2626;'>
            Explorar Catálogo
          </a>
        </div>
      </div>
    </div>

    <!-- Imagen principal -->
    <div class='banner-main-image'>
      <img src='https://images.unsplash.com/photo-1568772585407-9361f9bf3a87?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80' class='banner-main-img' loading='lazy' alt='Car parts main'>
    </div>
  </div>

  {%- comment -%} Banner de ejemplo 3 {%- endcomment -%}
  <div class='banner-slide'>
    <!-- Imagen de fondo -->
    <div class='banner-background'>
      <img src='https://images.unsplash.com/photo-1580414773411-8b1b8b1b8b1b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1920&q=80' class='absolute inset-0 w-full h-full object-cover' loading='lazy' alt='Workshop background'>
    </div>

    <!-- Overlay de gradiente -->
    <div class='banner-overlay'></div>

    <!-- Contenido del banner -->
    <div class='page-width'>
      <div class='banner-content banner-content--right'>
        <div class='banner-text-container'>
          <!-- Título -->
          <h2 class='banner-title' style='color: #ffffff;'>
            SERVICIO TÉCNICO ESPECIALIZADO
          </h2>

          <!-- Subtítulo con línea -->
          <div class='banner-subtitle-container'>
            <div class='banner-subtitle-line'></div>
            <p class='banner-subtitle' style='color: #ffffff;'>
              Instalación y mantenimiento profesional
            </p>
          </div>

          <!-- Botón -->
          <a href='/pages/contact' class='banner-button banner-button--outline' style='border-color: #dc2626; color: #dc2626;'>
            Contactar Ahora
          </a>
        </div>
      </div>
    </div>

    <!-- Imagen principal -->
    <div class='banner-main-image'>
      <img src='https://images.unsplash.com/photo-1580414773411-8b1b8b1b8b1b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80' class='banner-main-img' loading='lazy' alt='Workshop main'>
    </div>
  </div>

  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'banner_slide' -%}
        <div
          class='banner-slide{% if forloop.first %} active{% endif %}'
          {{ block.shopify_attributes }}
        >
          <!-- Imagen de fondo -->
          {%- if block.settings.background_image != blank -%}
            <div class='banner-background'>
              {{
                block.settings.background_image
                | image_url: width: 1920
                | image_tag: class: 'absolute inset-0 w-full h-full object-cover', loading: 'lazy'
              }}
            </div>
          {%- endif -%}

          <!-- Overlay de gradiente -->
          <div class='banner-overlay'></div>

          <!-- Contenido del banner -->
          <div class='page-width'>
            <div class='banner-content banner-content--{{ block.settings.text_alignment }}'>
              <div class='banner-text-container'>
                <!-- Título -->
                {%- if block.settings.title != blank -%}
                  <h2
                    class='banner-title'
                    style='color: {{ block.settings.title_color | default: section.settings.default_title_color }};'
                  >
                    {{ block.settings.title }}
                  </h2>
                {%- endif -%}

                <!-- Subtítulo con línea -->
                {%- if block.settings.subtitle != blank -%}
                  <div class='banner-subtitle-container'>
                    <div class='banner-subtitle-line'></div>
                    <p
                      class='banner-subtitle'
                      style='color: {{ block.settings.subtitle_color | default: section.settings.default_subtitle_color }};'
                    >
                      {{ block.settings.subtitle }}
                    </p>
                  </div>
                {%- endif -%}

                <!-- Botón CTA -->
                {%- if block.settings.button_text != blank and block.settings.button_url != blank -%}
                  <a
                    href='{{ block.settings.button_url }}'
                    class='banner-button banner-button--{{ block.settings.button_style }}'
                    style='
                      background-color: {{ block.settings.button_color | default: section.settings.default_button_color }};
                      color: {{ block.settings.button_text_color | default: section.settings.default_button_text_color }};
                      {% if block.settings.button_style == 'outline' %}
                        border-color: {{ block.settings.button_color | default: section.settings.default_button_color }};
                      {% endif %}
                    '
                  >
                    {{ block.settings.button_text }}
                  </a>
                {%- endif -%}
              </div>
            </div>
          </div>

          <!-- Imagen principal -->
          {%- if block.settings.main_image != blank -%}
            <div class='banner-main-image'>
              {{
                block.settings.main_image
                | image_url: width: 800
                | image_tag: class: 'banner-main-img', loading: 'lazy'
              }}
            </div>
          {%- endif -%}
        </div>
    {%- endcase -%}
  {%- endfor -%}

  <!-- Controles de navegación -->
  {%- if section.settings.show_controls -%}
    <div class='slider-controls-container'>
      <button class='slider-controls slider-controls--prev' aria-label='Banner anterior'>
        <svg viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2'>
          <path d="M15 18l-6-6 6-6"/>
        </svg>
      </button>
      <button class='slider-controls slider-controls--next' aria-label='Banner siguiente'>
        <svg viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2'>
          <path d="M9 18l6-6-6-6"/>
        </svg>
      </button>
    </div>
  {%- endif -%}

  <!-- Indicadores -->
  <div class='slider-indicators'>
    <button class='slider-indicator active' aria-label='Ir al banner 1' data-slide='0'></button>
    <button class='slider-indicator' aria-label='Ir al banner 2' data-slide='1'></button>
    <button class='slider-indicator' aria-label='Ir al banner 3' data-slide='2'></button>
  </div>
</div>

<script src='{{ 'banners-container-slider.js' | asset_url }}' defer></script>

{% schema %}
{
  "name": "Banner Rotador",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Configuración de Rotación"
    },
    {
      "type": "range",
      "id": "rotation_speed",
      "min": 3000,
      "max": 9000,
      "step": 1000,
      "unit": "ms",
      "label": "Velocidad de Rotación",
      "default": 5000
    },
    {
      "type": "checkbox",
      "id": "auto_play",
      "label": "Reproducción Automática",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_controls",
      "label": "Mostrar Controles",
      "default": true
    },
    {
      "type": "header",
      "content": "Configuración Global de Colores"
    },
    {
      "type": "color",
      "id": "default_title_color",
      "label": "Color por Defecto del Título",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "default_subtitle_color",
      "label": "Color por Defecto del Subtítulo",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "default_button_color",
      "label": "Color por Defecto del Botón",
      "default": "#fa0014"
    },
    {
      "type": "color",
      "id": "default_button_text_color",
      "label": "Color por Defecto del Texto del Botón",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "banner_slide",
      "name": "Banner",
      "settings": [
        {
          "type": "header",
          "content": "Imágenes"
        },
        {
          "type": "image_picker",
          "id": "main_image",
          "label": "Imagen Principal"
        },
        {
          "type": "image_picker",
          "id": "background_image",
          "label": "Imagen de Fondo"
        },
        {
          "type": "header",
          "content": "Contenido de Texto"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "NACIMOS PARA AYUDARTE"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtítulo",
          "default": "¿buscas repuestos! AQUÍ lOs ENCUENTRAS"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Alineación del Texto",
          "options": [
            {
              "value": "left",
              "label": "Izquierda"
            },
            {
              "value": "center",
              "label": "Centro"
            },
            {
              "value": "right",
              "label": "Derecha"
            }
          ],
          "default": "left"
        },
        {
          "type": "header",
          "content": "Colores Personalizados"
        },
        {
          "type": "color",
          "id": "title_color",
          "label": "Color del Título",
          "info": "Dejar vacío para usar color por defecto"
        },
        {
          "type": "color",
          "id": "subtitle_color",
          "label": "Color del Subtítulo",
          "info": "Dejar vacío para usar color por defecto"
        },
        {
          "type": "header",
          "content": "Botón CTA"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Texto del Botón",
          "default": "Ver Más"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "URL del Botón"
        },
        {
          "type": "color",
          "id": "button_color",
          "label": "Color del Botón",
          "info": "Dejar vacío para usar color por defecto"
        },
        {
          "type": "color",
          "id": "button_text_color",
          "label": "Color del Texto del Botón",
          "info": "Dejar vacío para usar color por defecto"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Estilo del Botón",
          "options": [
            {
              "value": "primary",
              "label": "Primario"
            },
            {
              "value": "secondary",
              "label": "Secundario"
            },
            {
              "value": "outline",
              "label": "Contorno"
            }
          ],
          "default": "primary"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner Rotador",
      "blocks": [
        {
          "type": "banner_slide"
        },
        {
          "type": "banner_slide"
        }
      ]
    }
  ]
}
{% endschema %}
