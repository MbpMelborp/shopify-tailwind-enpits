    },
    {
      "type": "color",
      "id": "default_button_text_color",
      "label": "Color del Texto del Botón",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "banner_slide",
      "name": "Banner",
      "settings": [
        {
          "type": "header",
          "content": "Imágenes"
        },
        {
          "type": "image_picker",
          "id": "background_image",
          "label": "Imagen de Fondo"
        },
        {
          "type": "image_picker",
          "id": "main_image",
          "label": "Imagen Principal"
        },
        {
          "type": "header",
          "content": "Contenido"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "Tu título aquí"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtítulo",
          "default": "Tu subtítulo aquí"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Texto del Botón",
          "default": "Ver Más"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "URL del Botón"
        },
        {
          "type": "header",
          "content": "Diseño"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Alineación del Texto",
          "options": [
            {
              "value": "left",
              "label": "Izquierda"
            },
            {
              "value": "center",
              "label": "Centro"
            },
            {
              "value": "right",
              "label": "Derecha"
            }
          ],
          "default": "left"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Estilo del Botón",
          "options": [
            {
              "value": "primary",
              "label": "Primario"
            },
            {
              "value": "secondary",
              "label": "Secundario"
            },
            {
              "value": "outline",
              "label": "Outline"
            }
          ],
          "default": "primary"
        },
        {
          "type": "header",
          "content": "Colores Personalizados"
        },
        {
          "type": "color",
          "id": "title_color",
          "label": "Color del Título Personalizado"
        },
        {
          "type": "color",
          "id": "subtitle_color",
          "label": "Color del Subtítulo Personalizado"
        },
        {
          "type": "color",
          "id": "button_color",
          "label": "Color del Botón Personalizado"
        },
        {
          "type": "color",
          "id": "button_text_color",
          "label": "Color del Texto del Botón Personalizado"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner Rotador",
      "blocks": [
        {
          "type": "banner_slide"
        },
        {
          "type": "banner_slide"
        }
      ]
    }
  ]
}
{% endschema %}
